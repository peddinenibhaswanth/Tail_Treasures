<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Admin Dashboard</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark">
      <div class="sidebar-header">
        <h3 class="text-white">Admin Panel</h3>
      </div>

      <ul class="list-unstyled components">
        <li class="<%= currentPath === '/dashboard' ? 'active' : '' %>">
          <a href="/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
        </li>
        <li class="<%= currentPath === '/admin/users' ? 'active' : '' %>">
          <a href="/admin/users"><i class="fas fa-users me-2"></i>Users</a>
        </li>
        <li class="<%= currentPath === '/admin/co-admins' ? 'active' : '' %>">
          <a href="/admin/co-admins"><i class="fas fa-user-shield me-2"></i>Co-Admins</a>
        </li>
        <li class="<%= currentPath === '/admin/pets' ? 'active' : '' %>">
          <a href="/admin/pets"><i class="fas fa-paw me-2"></i>Pets</a>
        </li>
        <li class="<%= currentPath === '/admin/products' ? 'active' : '' %>">
          <a href="/admin/products"><i class="fas fa-box me-2"></i>Products</a>
        </li>
        <li class="<%= currentPath === '/admin/applications' ? 'active' : '' %>">
          <a href="/admin/applications"><i class="fas fa-file-alt me-2"></i>Applications</a>
        </li>
        <li class="<%= currentPath === '/admin/messages' ? 'active' : '' %>">
          <a href="/admin/messages">
            <i class="fas fa-envelope me-2"></i>Messages
            <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
              <span class="badge bg-danger rounded-pill ms-2"><%= unreadCount %></span>
            <% } %>
          </a>
        </li>
      </ul>
    </nav>

    <!-- Page Content -->
    <div id="content">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-dark">
            <i class="fas fa-bars"></i>
          </button>
          
          <div class="ms-auto d-flex">
            <div class="dropdown">
              <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle me-1"></i> <%= currentUser.name %>
              </button>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="/auth/profile"><i class="fas fa-user-cog me-2"></i>Profile</a></li>
                <li><a class="dropdown-item" href="/"><i class="fas fa-home me-2"></i>Main Site</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <form action="/auth/logout" method="POST">
                    <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <!-- Flash Messages -->
      <%- include('./messages') %>

      <!-- Main Content -->
      <div class="main-content">
