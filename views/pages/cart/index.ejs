<div class="container py-5">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shopping-cart me-2"></i>Shopping Cart</h2>
        <a href="/products" class="btn btn-primary">
          <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
        </a>
      </div>

      <% if (cart && cart.items && cart.items.length > 0) { %>
        <div class="row">
          <!-- View Toggle -->
          <div class="col-12 mb-3">
            <div class="d-flex justify-content-end">
              <button class="btn btn-outline-secondary me-2" onclick="showCardView()">Card View</button>
              <button class="btn btn-outline-secondary" onclick="showTableView()">Table View</button>
            </div>
          </div>

          <!-- Card View -->
          <div class="col-12 col-lg-8 card-view">
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <h5 class="card-title mb-4">Cart Items</h5>
                
                <% cart.items.forEach(item => { %>
                  <div class="card mb-3">
                    <div class="row g-0 align-items-center">
                      <div class="col-4 col-md-2">
                        <img src="<%= item.image || '/images/product-placeholder.jpg' %>" class="img-fluid rounded-start" alt="<%= item.name %>" style="height: 100px; object-fit: cover;">
                      </div>
                      <div class="col-8 col-md-10">
                        <div class="card-body">
                          <div class="row align-items-center">
                            <div class="col-12 col-md-6">
                              <h5 class="card-title"><%= item.name %></h5>
                              <p class="card-text text-primary">$<%= item.price.toFixed(2) %></p>
                              <% if (item.product && item.product.seller) { %>
                                <p class="card-text text-muted small">
                                  Sold by: <%= item.product.seller.name %>
                                  <% if (currentUser && (currentUser.role === 'admin' || currentUser.role === 'co-admin') && item.product.seller.sellerInfo && item.product.seller.sellerInfo.taxId) { %>
                                    (Tax ID: <%= item.product.seller.sellerInfo.taxId %>)
                                  <% } %>
                                </p>
                              <% } %>
                              <% if (item.product && typeof item.product.stock !== 'undefined') { %>
                                <% if (item.product.stock === 0) { %>
                                  <span class="badge bg-danger">Out of Stock</span>
                                <% } else if (item.product.stock <= 5) { %>
                                  <span class="badge bg-warning text-dark">Low Stock</span>
                                <% } else { %>
                                  <span class="badge bg-success">In Stock</span>
                                <% } %>
                              <% } %>
                            </div>
                            <div class="col-12 col-md-3 mt-3 mt-md-0">
                              <form action="/cart/update" method="POST" class="d-flex align-items-center">
                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                <div class="input-group input-group-sm">
                                  <button class="btn btn-outline-secondary" type="button" onclick="decrementQuantity(this)">-</button>
                                  <input type="number" class="form-control text-center" name="quantity" value="<%= item.quantity %>" min="1" style="max-width: 60px; width: 60px !important; display: inline-block !important; visibility: visible !important; opacity: 1 !important;">
                                  <button class="btn btn-outline-secondary" type="button" onclick="incrementQuantity(this)">+</button>
                                </div>
                                <button type="submit" class="btn btn-sm btn-outline-primary ms-2">
                                  <i class="fas fa-sync-alt"></i>
                                </button>
                              </form>
                            </div>
                            <div class="col-12 col-md-3 mt-3 mt-md-0 text-md-end">
                              <p class="card-text fw-bold">$<%= (item.price * item.quantity).toFixed(2) %></p>
                              <div class="d-flex justify-content-md-end gap-2 flex-wrap">
                                <a href="/products/<%= item.product._id %>" class="btn btn-sm btn-outline-primary">
                                  <i class="fas fa-eye"></i> View
                                </a>
                                <form action="/cart/save-for-later" method="POST" class="d-inline">
                                  <input type="hidden" name="itemId" value="<%= item._id %>">
                                  <!-- <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-bookmark"></i> Save
                                  </button> -->
                                </form>
                                <form action="/cart/remove" method="POST" class="d-inline">
                                  <input type="hidden" name="itemId" value="<%= item._id %>">
                                  <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash-alt"></i> Remove
                                  </button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
                
                <div class="d-flex justify-content-between mt-4">
                  <a href="/products" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                  </a>
                  <form action="/cart/clear" method="POST">
                    <button type="submit" class="btn btn-outline-danger">
                      <i class="fas fa-trash-alt me-2"></i>Clear Cart
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <!-- Table View -->
          <div class="col-12 col-lg-8 table-view d-none">
            <div class="card shadow-sm mb-4">
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-hover mb-0">
                    <thead class="bg-light">
                      <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Stock</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% cart.items.forEach(item => { %>
                        <tr>
                          <td>
                            <img src="<%= item.image || '/images/product-placeholder.jpg' %>" alt="<%= item.name %>" style="width: 50px; height: 50px; object-fit: cover;">
                          </td>
                          <td>
                            <%= item.name %>
                            <% if (item.product && item.product.seller) { %>
                              <br><small class="text-muted">
                                Sold by: <%= item.product.seller.name %>
                                <% if (currentUser && (currentUser.role === 'admin' || currentUser.role === 'co-admin') && item.product.seller.sellerInfo && item.product.seller.sellerInfo.taxId) { %>
                                  (Tax ID: <%= item.product.seller.sellerInfo.taxId %>)
                                <% } %>
                              </small>
                            <% } %>
                          </td>
                          <td>$<%= item.price.toFixed(2) %></td>
                          <td>
                            <form action="/cart/update" method="POST" class="d-flex align-items-center">
                              <input type="hidden" name="itemId" value="<%= item._id %>">
                              <div class="input-group input-group-sm" style="max-width: 120px;">
                                <button class="btn btn-outline-secondary" type="button" onclick="decrementQuantity(this)">-</button>
                                <input type="number" class="form-control text-center" name="quantity" value="<%= item.quantity %>" min="1" style="width: 40px !important; display: inline-block !important; visibility: visible !important; opacity: 1 !important;">
                                <button class="btn btn-outline-secondary" type="button" onclick="incrementQuantity(this)">+</button>
                              </div>
                              <button type="submit" class="btn btn-sm btn-outline-primary ms-2">
                                <i class="fas fa-sync-alt"></i>
                              </button>
                            </form>
                          </td>
                          <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                          <td>
                            <% if (item.product && typeof item.product.stock !== 'undefined') { %>
                              <% if (item.product.stock === 0) { %>
                                <span class="badge bg-danger">Out of Stock</span>
                              <% } else if (item.product.stock <= 5) { %>
                                <span class="badge bg-warning text-dark">Low Stock</span>
                              <% } else { %>
                                <span class="badge bg-success">In Stock</span>
                              <% } %>
                            <% } %>
                          </td>
                          <td>
                            <div class="d-flex gap-2">
                              <a href="/products/<%= item.product._id %>" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> View
                              </a>
                              <form action="/cart/save-for-later" method="POST" class="d-inline">
                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                  <i class="fas fa-bookmark"></i> Save
                                </button>
                              </form>
                              <form action="/cart/remove" method="POST" class="d-inline">
                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                  <i class="fas fa-trash-alt"></i> Remove
                                </button>
                              </form>
                            </div>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Order Summary -->
          <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title mb-4">Order Summary</h5>
                
                <div class="d-flex justify-content-between mb-2">
                  <span>Subtotal:</span>
                  <span>$<%= cart.subtotal.toFixed(2) %></span>
                </div>
                
                <div class="d-flex justify-content-between mb-2">
                  <span>Shipping:</span>
                  <span>$<%= cart.shipping.toFixed(2) %></span>
                </div>
                
                <div class="d-flex justify-content-between mb-2">
                  <span>Tax (8.5%):</span>
                  <span>$<%= cart.tax.toFixed(2) %></span>
                </div>
                
                <hr>
                
                <div class="d-flex justify-content-between mb-4">
                  <span class="fw-bold">Total:</span>
                  <span class="fw-bold">$<%= cart.total.toFixed(2) %></span>
                </div>
                
                <a href="/checkout" class="btn btn-primary w-100">
                  <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="card shadow-sm">
          <div class="card-body text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
            <h4>Your cart is empty</h4>
            <p class="text-muted">Looks like you haven't added any products to your cart yet.</p>
            <a href="/products" class="btn btn-primary mt-3">
              <i class="fas fa-shopping-bag me-2"></i>Browse Products
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
  function showCardView() {
    document.querySelector('.card-view').classList.remove('d-none');
    document.querySelector('.table-view').classList.add('d-none');
  }

  function showTableView() {
    document.querySelector('.card-view').classList.add('d-none');
    document.querySelector('.table-view').classList.remove('d-none');
  }

  function incrementQuantity(button) {
    const input = button.parentElement.querySelector('input');
    input.value = parseInt(input.value) + 1;
  }
  
  function decrementQuantity(button) {
    const input = button.parentElement.querySelector('input');
    const value = parseInt(input.value);
    if (value > 1) {
      input.value = value - 1;
    }
  }
  
  // Update cart count in navbar
  document.addEventListener('DOMContentLoaded', function() {
    fetch('/cart/count')
      .then(response => response.json())
      .then(data => {
        const cartCountElement = document.querySelector('.cart-count');
        if (cartCountElement) {
          cartCountElement.textContent = data.count;
          if (data.count === 0) {
            cartCountElement.classList.add('d-none');
          } else {
            cartCountElement.classList.remove('d-none');
          }
        }
      })
      .catch(error => console.error('Error fetching cart count:', error));
  });
</script>

<%- include('../../partials/footer') %>