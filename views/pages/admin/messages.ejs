<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col">
      <h2 class="mb-0">Messages</h2>
      <p class="text-muted">Manage all messages received through the contact form</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <form action="/admin/messages" method="GET" class="row g-3">
        <div class="col-md-3">
          <label for="read" class="form-label">Status</label>
          <select class="form-select" id="read" name="read">
            <option value="">All Messages</option>
            <option value="false" <%= filter && filter.read === 'false' ? 'selected' : '' %>>Unread</option>
            <option value="true" <%= filter && filter.read === 'true' ? 'selected' : '' %>>Read</option>
          </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-filter me-2"></i>Apply Filters
          </button>
          <a href="/admin/messages" class="btn btn-outline-secondary ms-2">
            <i class="fas fa-times me-2"></i>Clear
          </a>
        </div>
      </form>
    </div>
  </div>

  <!-- Messages Table -->
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-light">
            <tr>
              <th>Status</th>
              <th>From</th>
              <th>Email</th>
              <th>Subject</th>
              <th>Received</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (messages && messages.length > 0) { %>
              <% messages.forEach(message => { %>
                <tr class="<%= !message.isRead ? 'table-light fw-bold' : '' %>">
                  <td>
                    <% if (message.isRead) { %>
                      <span class="badge bg-secondary">Read</span>
                    <% } else { %>
                      <span class="badge bg-primary">Unread</span>
                    <% } %>
                  </td>
                  <td><%= message.name %></td>
                  <td><a href="mailto:<%= message.email %>" class="text-decoration-none"><%= message.email %></a></td>
                  <td><a href="/admin/messages/<%= message._id %>" class="text-decoration-none"><%= message.subject %></a></td>
                  <td><%= new Date(message.createdAt).toLocaleDateString() %> <%= new Date(message.createdAt).toLocaleTimeString() %></td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <a href="/admin/messages/<%= message._id %>" class="btn btn-outline-primary">
                        <i class="fas fa-eye"></i>
                      </a>
                      <% if (message.isRead) { %>
                        <form action="/admin/messages/<%= message._id %>/mark-unread" method="POST">
                          <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-envelope"></i>
                          </button>
                        </form>
                      <% } else { %>
                        <form action="/admin/messages/<%= message._id %>/mark-read" method="POST">
                          <button type="submit" class="btn btn-outline-secondary">
                            <i class="fas fa-envelope-open"></i>
                          </button>
                        </form>
                      <% } %>
                      <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteMessageModal<%= message._id %>">
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </div>
                    
                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteMessageModal<%= message._id %>" tabindex="-1" aria-labelledby="deleteMessageModalLabel<%= message._id %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="deleteMessageModalLabel<%= message._id %>">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            Are you sure you want to delete this message? This action cannot be undone.
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <form action="/admin/messages/<%= message._id %>?_method=DELETE" method="POST">
                              <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4">No messages found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Pagination -->
    <% if (pages > 1) { %>
      <div class="card-footer">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center mb-0">
            <% if (current > 1) { %>
              <li class="page-item">
                <a class="page-link" href="/admin/messages?page=<%= current - 1 %><%= filter ? `&read=${filter.read || ''}` : '' %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            <% } else { %>
              <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            <% } %>
            
            <% for (let i = 1; i <= pages; i++) { %>
              <% if (i === current) { %>
                <li class="page-item active"><a class="page-link" href="#"><%= i %></a></li>
              <% } else { %>
                <li class="page-item">
                  <a class="page-link" href="/admin/messages?page=<%= i %><%= filter ? `&read=${filter.read || ''}` : '' %>"><%= i %></a>
                </li>
              <% } %>
            <% } %>
            
            <% if (current < pages) { %>
              <li class="page-item">
                <a class="page-link" href="/admin/messages?page=<%= current + 1 %><%= filter ? `&read=${filter.read || ''}` : '' %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            <% } else { %>
              <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
    <% } %>
  </div>
</div>

<%- include('../../partials/admin-footer') %>
