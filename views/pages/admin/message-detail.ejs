

<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col">
      <h2 class="mb-0">Message Details</h2>
      <p class="text-muted">View and respond to messages</p>
    </div>
    <div class="col-auto">
      <a href="/admin/messages" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Messages
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <!-- Message Content -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= message.subject %></h5>
          <span class="badge <%= message.isRead ? 'bg-secondary' : 'bg-primary' %>">
            <%= message.isRead ? 'Read' : 'Unread' %>
          </span>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <div class="d-flex justify-content-between mb-3">
              <div>
                <strong>From:</strong> <%= message.name %> (<a href="mailto:<%= message.email %>" class="text-decoration-none"><%= message.email %></a>)
              </div>
              <div>
                <small class="text-muted"><%= new Date(message.createdAt).toLocaleDateString() %> <%= new Date(message.createdAt).toLocaleTimeString() %></small>
              </div>
            </div>
            <div class="message-content p-3 bg-light rounded">
              <p style="white-space: pre-line;"><%= message.message %></p>
            </div>
          </div>
          
          <div class="d-flex">
            <% if (message.isRead) { %>
              <form action="/admin/messages/<%= message._id %>/mark-unread" method="POST">
                <button type="submit" class="btn btn-outline-secondary me-2">
                  <i class="fas fa-envelope me-2"></i>Mark as Unread
                </button>
              </form>
            <% } else { %>
              <form action="/admin/messages/<%= message._id %>/mark-read" method="POST">
                <button type="submit" class="btn btn-outline-secondary me-2">
                  <i class="fas fa-envelope-open me-2"></i>Mark as Read
                </button>
              </form>
            <% } %>
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteMessageModal">
              <i class="fas fa-trash-alt me-2"></i>Delete
            </button>
          </div>
        </div>
      </div>
      
      <!-- Reply Form -->
      <div class="card shadow-sm">
        <!-- <div class="card-header bg-white">
          <h5 class="mb-0"><i class="fas fa-reply me-2"></i>Reply</h5>
        </div> -->
        <div class="card-body">
          <form action="/admin/messages/<%= message._id %>/reply" method="POST">
            <!-- <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject" value="Re: <%= message.subject %>" required>
            </div> -->
            <!-- <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="6" required></textarea>
            </div> -->
            <!-- <button type="submit" class="btn btn-primary">
              <i class="fas fa-paper-plane me-2"></i>Send Reply
            </button> -->
          </form>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <!-- Message Info -->
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Message Info</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>Status</span>
              <span class="badge <%= message.isRead ? 'bg-secondary' : 'bg-primary' %>">
                <%= message.isRead ? 'Read' : 'Unread' %>
              </span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>Date Received</span>
              <span><%= new Date(message.createdAt).toLocaleDateString() %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>Time Received</span>
              <span><%= new Date(message.createdAt).toLocaleTimeString() %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>Sender Name</span>
              <span><%= message.name %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>Sender Email</span>
              <span><a href="mailto:<%= message.email %>" class="text-decoration-none"><%= message.email %></a></span>
            </li>
          </ul>
        </div>
      </div>
      
      <!-- Quick Actions -->
      <div class="card shadow-sm">
        <div class="card-header bg-white">
          <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="mailto:<%= message.email %>" class="btn btn-outline-primary">
              <i class="fas fa-envelope me-2"></i>Email Directly
            </a>
            <!-- <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#quickReplyModal">
              <i class="fas fa-check-circle me-2"></i>Send Quick Reply
            </button> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteMessageModal" tabindex="-1" aria-labelledby="deleteMessageModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteMessageModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this message? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/admin/messages/<%= message._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Quick Reply Modal -->
<div class="modal fade" id="quickReplyModal" tabindex="-1" aria-labelledby="quickReplyModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="quickReplyModalLabel">Quick Reply</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/admin/messages/<%= message._id %>/reply" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="quickSubject" class="form-label">Subject</label>
            <input type="text" class="form-control" id="quickSubject" name="subject" value="Re: <%= message.subject %>" required>
          </div>
          <div class="mb-3">
            <label for="quickMessage" class="form-label">Select a template:</label>
            <select class="form-select mb-3" id="quickReplyTemplate">
              <option value="">Select a template...</option>
              <option value="Thank you for your message. We have received your inquiry and will get back to you as soon as possible.">General Acknowledgment</option>
              <option value="Thank you for your interest in adopting a pet. We would be happy to provide more information about our adoption process.">Adoption Inquiry</option>
              <option value="Thank you for your feedback. We appreciate your input and will take it into consideration.">Feedback Response</option>
              <option value="We're sorry to hear about your experience. We would like to address your concerns and make things right.">Complaint Response</option>
            </select>
            <textarea class="form-control" id="quickMessage" name="message" rows="6" required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Send Reply</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Quick reply template selector
    const templateSelector = document.getElementById('quickReplyTemplate');
    const messageField = document.getElementById('quickMessage');
    
    templateSelector.addEventListener('change', function() {
      if (this.value) {
        messageField.value = this.value;
      }
    });
  });
</script>

