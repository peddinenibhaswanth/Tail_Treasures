<%- include('../../partials/admin-header') %>

<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col">
      <h2 class="mb-0">Co-Admin Management</h2>
      <p class="text-muted">Manage co-administrators who can help you run the platform</p>
    </div>
    <div class="col-auto">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCoAdminModal">
        <i class="fas fa-user-plus me-2"></i>Add New Co-Admin
      </button>
    </div>
  </div>

  <!-- Co-Admins Table -->
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-light">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Created By</th>
              <th>Created On</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (coAdmins && coAdmins.length > 0) { %>
              <% coAdmins.forEach(coAdmin => { %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <img src="<%= coAdmin.profileImage || '/images/default-profile.jpg' %>" alt="<%= coAdmin.name %>" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                      <%= coAdmin.name %>
                    </div>
                  </td>
                  <td><a href="mailto:<%= coAdmin.email %>" class="text-decoration-none"><%= coAdmin.email %></a></td>
                  <td><%= coAdmin.phone || 'N/A' %></td>
                  <td>
                    <% if (coAdmin.createdBy && typeof coAdmin.createdBy === 'object') { %>
                      <%= coAdmin.createdBy.name %>
                    <% } else { %>
                      System
                    <% } %>
                  </td>
                  <td><%= new Date(coAdmin.createdAt).toLocaleDateString() %></td>
                  <td>
                    <div class="btn-group btn-group-sm">
                      <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editCoAdminModal<%= coAdmin._id %>">
                        <i class="fas fa-edit"></i>
                      </button>
                      <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteCoAdminModal<%= coAdmin._id %>">
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </div>
                    
                    <!-- Edit Modal -->
                    <div class="modal fade" id="editCoAdminModal<%= coAdmin._id %>" tabindex="-1" aria-labelledby="editCoAdminModalLabel<%= coAdmin._id %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="editCoAdminModalLabel<%= coAdmin._id %>">Edit Co-Admin</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <form action="/admin/co-admins/<%= coAdmin._id %>?_method=PUT" method="POST">
                            <div class="modal-body">
                              <div class="mb-3">
                                <label for="name<%= coAdmin._id %>" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name<%= coAdmin._id %>" name="name" value="<%= coAdmin.name %>" required>
                              </div>
                              <div class="mb-3">
                                <label for="email<%= coAdmin._id %>" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email<%= coAdmin._id %>" name="email" value="<%= coAdmin.email %>" required>
                              </div>
                              <div class="mb-3">
                                <label for="phone<%= coAdmin._id %>" class="form-label">Phone (Optional)</label>
                                <input type="tel" class="form-control" id="phone<%= coAdmin._id %>" name="phone" value="<%= coAdmin.phone || '' %>">
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn btn-primary">Update Co-Admin</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteCoAdminModal<%= coAdmin._id %>" tabindex="-1" aria-labelledby="deleteCoAdminModalLabel<%= coAdmin._id %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="deleteCoAdminModalLabel<%= coAdmin._id %>">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            Are you sure you want to delete <strong><%= coAdmin.name %></strong> as a co-admin? This action cannot be undone.
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <form action="/admin/co-admins/<%= coAdmin._id %>?_method=DELETE" method="POST">
                              <button type="submit" class="btn btn-danger">Delete Co-Admin</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4">No co-admins found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Add Co-Admin Modal -->
<div class="modal fade" id="addCoAdminModal" tabindex="-1" aria-labelledby="addCoAdminModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCoAdminModalLabel">Add New Co-Admin</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/admin/co-admins" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <small class="text-muted">Password must be at least 6 characters</small>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone (Optional)</label>
            <input type="tel" class="form-control" id="phone" name="phone">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Co-Admin</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/admin-footer') %>
