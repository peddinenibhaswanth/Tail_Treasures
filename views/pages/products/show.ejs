<div class="container py-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/products">Products</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
    </ol>
  </nav>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card border-0">
        <div class="card-body p-0">
          <img src="<%= product.mainImage || '/images/product-placeholder.jpg' %>" alt="<%= product.name %>" class="img-fluid rounded">
          
          <% if (product.images && product.images.length > 1) { %>
            <div class="row mt-3">
              <% product.images.forEach(image => { %>
                <div class="col-3 mb-3">
                  <img src="<%= image %>" alt="<%= product.name %>" class="img-thumbnail product-thumbnail">
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <h1 class="mb-2"><%= product.name %></h1>
      
      <div class="mb-3">
        <% if (product.onSale) { %>
          <span class="text-decoration-line-through text-muted fs-4">$<%= product.price.toFixed(2) %></span>
          <span class="text-danger fs-3 fw-bold">$<%= product.salePrice.toFixed(2) %></span>
          <span class="badge bg-danger ms-2">Sale</span>
        <% } else { %>
          <span class="fs-3 fw-bold">$<%= product.price.toFixed(2) %></span>
        <% } %>
        
        <% if (product.featured) { %>
          <span class="badge bg-primary ms-2">Featured</span>
        <% } %>
      </div>
      
      <div class="mb-4">
        <span class="badge bg-secondary text-capitalize"><%= product.category %></span>
        <span class="badge bg-info text-dark text-capitalize"><%= product.petType %></span>
        
        <% if (product.stock > 0) { %>
          <span class="badge bg-success">In Stock (<%= product.stock %>)</span>
        <% } else { %>
          <span class="badge bg-danger">Out of Stock</span>
        <% } %>
      </div>
      
      <div class="mb-4">
        <h5>Description</h5>
        <p><%= product.description %></p>
      </div>
      
      <% if (product.stock > 0) { %>
        <form action="/cart/add" method="POST" class="mb-4">
          <input type="hidden" name="productId" value="<%= product._id %>">
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="quantity" class="col-form-label">Quantity:</label>
            </div>
            <div class="col-auto">
              <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="<%= product.stock %>">
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-cart-plus me-2"></i>Add to Cart
              </button>
            </div>
          </div>
        </form>
      <% } else { %>
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-circle me-2"></i>This product is currently out of stock.
        </div>
        <button class="btn btn-outline-secondary" disabled>
          <i class="fas fa-cart-plus me-2"></i>Add to Cart
        </button>
      <% } %>
      
      <hr class="my-4">
      
      <div class="mb-3">
        <h5>Seller Information</h5>
        <% if (product.seller && product.seller.name) { %>
          <p><strong><%= product.seller.sellerInfo?.businessName || product.seller.name %></strong></p>
          <% if (product.seller.sellerInfo?.description) { %>
            <p class="small"><%= product.seller.sellerInfo.description %></p>
          <% } %>
        <% } else { %>
          <p>Seller information not available</p>
        <% } %>
      </div>
      
      <div class="d-flex gap-2">
        <a href="/products" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left me-2"></i>Back to Products
        </a>
        
        <% if (currentUser && (currentUser.role === 'admin' || (currentUser.role === 'seller' && product.seller.toString() === currentUser._id.toString()))) { %>
          <a href="/products/<%= product._id %>/edit" class="btn btn-outline-primary">
            <i class="fas fa-edit me-2"></i>Edit
          </a>
          <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteProductModal">
            <i class="fas fa-trash-alt me-2"></i>Delete
          </button>
        <% } %>
      </div>
    </div>
  </div>
  
  <% if (product.reviews && product.reviews.length > 0) { %>
    <div class="row mt-5">
      <div class="col-12">
        <h3>Customer Reviews</h3>
        <hr>
        
        <% product.reviews.forEach(review => { %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between mb-2">
                <h5 class="card-title"><%= review.title %></h5>
                <div>
                  <% for (let i = 1; i <= 5; i++) { %>
                    <i class="fas fa-star<%= i <= review.rating ? ' text-warning' : '-o text-muted' %>"></i>
                  <% } %>
                </div>
              </div>
              <h6 class="card-subtitle mb-2 text-muted">By <%= review.user.name %> on <%= new Date(review.createdAt).toLocaleDateString() %></h6>
              <p class="card-text"><%= review.comment %></p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  <% } %>
  
