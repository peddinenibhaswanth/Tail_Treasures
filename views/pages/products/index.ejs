<div class="row">
  <div class="col-md-3">
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Filter Products</h5>
      </div>
      <div class="card-body">
        <form action="/products" method="GET">
          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" id="category" name="category">
              <option value="">All Categories</option>
              <option value="food" <%= filter && filter.category === 'food' ? 'selected' : '' %>>Food</option>
              <option value="toys" <%= filter && filter.category === 'toys' ? 'selected' : '' %>>Toys</option>
              <option value="accessories" <%= filter && filter.category === 'accessories' ? 'selected' : '' %>>Accessories</option>
              <option value="health" <%= filter && filter.category === 'health' ? 'selected' : '' %>>Health & Wellness</option>
              <option value="grooming" <%= filter && filter.category === 'grooming' ? 'selected' : '' %>>Grooming</option>
              <option value="bedding" <%= filter && filter.category === 'bedding' ? 'selected' : '' %>>Bedding</option>
              <option value="clothing" <%= filter && filter.category === 'clothing' ? 'selected' : '' %>>Clothing</option>
              <option value="other" <%= filter && filter.category === 'other' ? 'selected' : '' %>>Other</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label for="petType" class="form-label">Pet Type</label>
            <select class="form-select" id="petType" name="petType">
              <option value="">All Pets</option>
              <option value="dog" <%= filter && filter.petType === 'dog' ? 'selected' : '' %>>Dogs</option>
              <option value="cat" <%= filter && filter.petType === 'cat' ? 'selected' : '' %>>Cats</option>
              <option value="bird" <%= filter && filter.petType === 'bird' ? 'selected' : '' %>>Birds</option>
              <option value="fish" <%= filter && filter.petType === 'fish' ? 'selected' : '' %>>Fish</option>
              <option value="small_pet" <%= filter && filter.petType === 'small_pet' ? 'selected' : '' %>>Small Pets</option>
              <option value="reptile" <%= filter && filter.petType === 'reptile' ? 'selected' : '' %>>Reptiles</option>
              <option value="all" <%= filter && filter.petType === 'all' ? 'selected' : '' %>>Universal</option>
            </select>
          </div>
          
          <div class="mb-3">
            <label for="priceRange" class="form-label">Price Range</label>
            <select class="form-select" id="priceRange" name="priceRange">
              <option value="">Any Price</option>
              <option value="0-25" <%= filter && filter.priceRange === '0-25' ? 'selected' : '' %>>Under $25</option>
              <option value="25-50" <%= filter && filter.priceRange === '25-50' ? 'selected' : '' %>>$25 - $50</option>
              <option value="50-100" <%= filter && filter.priceRange === '50-100' ? 'selected' : '' %>>$50 - $100</option>
              <option value="100-1000" <%= filter && filter.priceRange === '100-1000' ? 'selected' : '' %>>Over $100</option>
            </select>
          </div>
          
          <div class="mb-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="onSale" name="onSale" value="true" <%= filter && filter.onSale === 'true' ? 'checked' : '' %>>
              <label class="form-check-label" for="onSale">
                On Sale
              </label>
            </div>
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Apply Filters</button>
            <a href="/products" class="btn btn-outline-secondary mt-2">Clear Filters</a>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <div class="col-md-9">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Pet Products</h2>
      <!-- <div class="input-group" style="max-width: 300px;">
        <form action="/products/search" method="GET" class="d-flex w-100">
          <input type="text" class="form-control" placeholder="Search products..." name="query" aria-label="Search products">
          <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div> -->
    </div>
    
    <% if (products && products.length > 0) { %>
      <div class="row">
        <% products.forEach(product => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 product-card">
              <div class="position-relative">
                <img src="<%= product.mainImage %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                <% if (product.onSale) { %>
                  <span class="position-absolute top-0 start-0 badge bg-danger m-2">SALE</span>
                <% } %>
                <% if (product.featured) { %>
                  <span class="position-absolute top-0 end-0 badge bg-info m-2">Featured</span>
                <% } %>
              </div>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text mb-1">
                  <span class="badge bg-primary"><%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %></span>
                  <span class="badge bg-secondary"><%= product.petType.charAt(0).toUpperCase() + product.petType.slice(1) %></span>
                </p>
                <p class="card-text">
                  <% if (product.onSale) { %>
                    <span class="text-decoration-line-through">$<%= product.price.toFixed(2) %></span>
                    <span class="text-danger ms-2">$<%= product.salePrice.toFixed(2) %></span>
                  <% } else { %>
                    <span>$<%= product.price.toFixed(2) %></span>
                  <% } %>
                </p>
                <div class="mt-auto">
                  <div class="d-flex">
                    <a href="/products/<%= product._id %>" class="btn btn-outline-primary flex-grow-1 me-2">View Details</a>
                    <button class="btn btn-primary add-to-cart" data-product-id="<%= product._id %>">
                      <i class="fas fa-cart-plus"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      
      <% if (pages > 1) { %>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% if (current > 1) { %>
              <li class="page-item">
                <a class="page-link" href="/products?page=<%= current - 1 %><% for (const key in filter) { if (filter[key] && key !== 'page') { %>&<%= key %>=<%= filter[key] %><% } } %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            <% } %>
            
            <% for (let i = 1; i <= pages; i++) { %>
              <li class="page-item <%= current == i ? 'active' : '' %>">
                <a class="page-link" href="/products?page=<%= i %><% for (const key in filter) { if (filter[key] && key !== 'page') { %>&<%= key %>=<%= filter[key] %><% } } %>"><%= i %></a>
              </li>
            <% } %>
            
            <% if (current < pages) { %>
              <li class="page-item">
                <a class="page-link" href="/products?page=<%= current + 1 %><% for (const key in filter) { if (filter[key] && key !== 'page') { %>&<%= key %>=<%= filter[key] %><% } } %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            <% } %>
          </ul>
        </nav>
      <% } %>
    <% } else { %>
      <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>No products found matching your criteria. Try adjusting your filters.
      </div>
    <% } %>
  </div>
</div>
